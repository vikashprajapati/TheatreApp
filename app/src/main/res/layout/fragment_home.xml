<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/app_toolbar"
                layout="@layout/app_toolbar"
                app:layout_constraintBottom_toTopOf="@id/main_content_linear_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/main_content_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:padding="@dimen/app_screen_padding"
                app:layout_constraintTop_toBottomOf="@id/app_toolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/appCompatEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:hint="@string/search_bar_hint_text"
                        android:textColor="@color/dark_gray"
                        android:textColorHint="@color/light_gray"
                        android:padding="8dp"
                        />
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="join"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/my_room_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Rooms"
                        android:textSize="24sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/room_available_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6 Rooms Available"
                        android:textSize="14sp"
                        android:textColor="@color/medium_gray"/>

                    <include
                        layout="@layout/item_room"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rooms_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/connection_status_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:text="Hello World!"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/media_player_fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/black"/>

                <EditText
                    android:id="@+id/message_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:hint="Enter video source url"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                </RelativeLayout>
                <Button
                    android:id="@+id/play_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="play"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>
