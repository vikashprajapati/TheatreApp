<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_toolbar_height">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="@dimen/app_toolbar_icons_width"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pull_to_refresh_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/pull_to_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/app_logo"
        app:layout_constraintEnd_toStartOf="@id/search_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_toolbar_text_size"
            android:text="@string/pull_to_refresh_text"
            android:textColor="@color/pull_to_refresh_header_text_color"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down"
            app:tint="@color/pull_to_refresh_header_text_color" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="@dimen/app_toolbar_icons_width"
        android:layout_height="0dp"
        android:background="#00000000"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pull_to_refresh_layout"
        app:layout_constraintTop_toTopOf="@+id/app_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/primary_color" />

</androidx.constraintlayout.widget.ConstraintLayout>