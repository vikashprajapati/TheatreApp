<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheatreApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/on_primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/tertiary_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/trebuc</item>
        <item name="fontFamily">@font/trebuc</item>
    </style>

    <style name="ExoMediaButton.VideoSync">
        <item name="android:src">@drawable/ic_sync</item>
        <item name="android:contentDescription">@string/exo_controls_video_sync_description</item>
    </style>
    <style name="ExoMediaButton.Fullscreen">
        <item name="android:src">@drawable/ic_fullscreen</item>
        <item name="android:contentDescription">@string/exo_controls_video_fullscreen_description</item>
    </style>
    <style name="ExoMediaButton.Smallscreen">
        <item name="android:src">@drawable/ic_squeeze</item>
        <item name="android:contentDescription">@string/exo_controls_video_smallscreen_description</item>
    </style>
</resources>